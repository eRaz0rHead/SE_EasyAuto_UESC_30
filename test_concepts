@Variables {
  ss = TriggerDelay of SS
}

@TestVarScope {
  Write to TestDisplay = "ss starts set to \ss"
  TriggerDelay of SS = 1
  if ss != 1 {
    Write to TestDisplay = "ss was not re-calculated immediately"
    @TestInline
  }
}

@TestInline {
  if ss != 1 {
    Write to TestDisplay = "ss inline remains @ \ss"
    Delay 1000
    @TestAfterDelay
  } 
}

@TestAfterDelay {
  if ss != 1 {
    Write to TestDisplay = "ss after delay remains @ \ss"
  } 
}
